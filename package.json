{
  "name": "angular-electron-seed",
  "description": "Angular whit electron seed",
  "version": "1.0.0",
  "author": {
    "name": "Adrien R",
    "url": "https://github.com/Mrgove10"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "ng build --base-href ./ && tsc --p electron && electron .",
    "electron:build": "ng build --base-href ./ --configuration production && tsc --p electron && electron-builder --publish never",
    "electron:build:all": "ng build --base-href ./ --configuration production && tsc --p electron && electron-builder -mwl --publish never"
  },
  "build": {
    "appId": "com.example.app",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "main": "electron/dist/main.js",
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.4",
    "@angular/common": "~12.2.4",
    "@angular/compiler": "~12.2.4",
    "@angular/core": "~12.2.4",
    "@angular/forms": "~12.2.4",
    "@angular/platform-browser": "~12.2.4",
    "@angular/platform-browser-dynamic": "~12.2.4",
    "@angular/router": "~12.2.4",
    "rxjs": "~6.6.3",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.4",
    "@angular/cli": "~12.2.4",
    "@angular/compiler-cli": "~12.2.4",
    "@angular/language-service": "~12.2.4",
    "@types/electron": "^1.6.10",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^16.7.10",
    "codelyzer": "^6.0.0",
    "electron": "^18.3.7",
    "electron-builder": "^22.11.7",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.3.5"
  }
}